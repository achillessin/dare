<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout 
        android:id="@+id/linearlayoutAcceptDecline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <Button 
            android:id="@+id/buttonAccept"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="accept"/>
        <Button 
            android:id="@+id/buttonDecline"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="decline"/>"
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/linearlayoutResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
           <TextView
            android:id="@+id/textviewResponseMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRespond"
            android:clickable="true"/>
           <FrameLayout
            android:id="@+id/framelayoutResponseContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
