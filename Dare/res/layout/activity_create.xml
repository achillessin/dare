<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">
    <TextView
        android:id="@+id/create_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="Challenge your Friends!"/>
    <EditText
        android:id="@+id/challenge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_title"
        android:layout_margin="5dp"
        android:singleLine="true"
        android:hint="Title for your challenge..."/>
    <EditText
        android:id="@+id/challenge_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/challenge_title"
        android:layout_margin="5dp"
        android:lines="6"
        android:hint="Enter challenge details..."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"/>
        <Button
            android:id="@+id/send_request_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/send_request"
        />
    </LinearLayout>
</RelativeLayout>